extends /layouts/default

block head
    script(src="//ajax.googleapis.com/ajax/libs/webfont/1.5.10/webfont.js")
    script.
        WebFont.load({
            google: {
                families: ['Anonymous Pro', 'Montserrat:n4,i4,n7,i7', 'Merriweather:n4,i4,n7,i7']
            }
        });

block content
    .learn.g--container
        header.learn--header.learn--guide
            .g--row
                h1 This is Markdown.
                p Markdown is a way of formatting text that can be easily read and understood by both humans and software.
            .g--row
                h2 How to use markdown
                p.
                    By typing different characters and punctuation, you can #[strong bold],
                    #[em italicize], and #[a(href="http://planetary.io") link] your text.
                p.
                    #[strong All examples below are interactive]; edit the text on the left and see how it changes on the right!
        .learn--example.g--row
            .g--half
                .learn--input
                    textarea(data-name="bold").
                        **I am bold.**
            .g--half.g--last
                .learn--output(data-type="output", data-name="bold")
        hr.learn--divider
        .learn--example.g--row
            .g--half
                .learn--input
                    textarea(data-name="italic").
                        _I am emphatic._
            .g--half.g--last
                .learn--output(data-type="output", data-name="italic")
        hr.learn--divider
        .learn--example.g--row
            .g--half
                .learn--input
                    textarea(data-name="link").
                        [I am a link.](http://thisismarkdown.com)
            .g--half.g--last
                .learn--output(data-type="output", data-name="link")
        hr.learn--divider
        .learn--example.g--row
            .g--half
                .learn--input
                    textarea(data-name="code").
                        Code blocks are:

                            (function() {
                              return 'so cool.';
                            })()
            .g--half.g--last
                .learn--output(data-type="output", data-name="code")
        hr.learn--divider
        .learn--example.g--row
            .g--half
                .learn--input
                    textarea(data-name="bulleted-list").
                        * Bread
                        * Milk
                        * Eggs
                        * Bulleted lists
            .g--half.g--last
                .learn--output(data-type="output", data-name="bulleted-list")
        hr.learn--divider
        .learn--example.g--row
            .g--half
                .learn--input
                    textarea(data-name="ordered-list").
                        1. Dance
                        2. ???
                        3. Profit!
                        4. Ordered lists
            .g--half.g--last
                .learn--output(data-type="output", data-name="ordered-list")
        hr.learn--divider
        .learn--example.g--row
            .g--half
                .learn--input
                    textarea(data-name="blockquote").
                        And she said:
                        > Like, oh my god.
            .g--half.g--last
                .learn--output(data-type="output", data-name="blockquote")
        hr.learn--divider
        .learn--example.g--row
            .g--half
                .learn--input
                    textarea(data-name="image").
                        ![Cat? Cat.](https://placekitten.com/g/300/200)
            .g--half.g--last
                .learn--output(data-type="output", data-name="image")
